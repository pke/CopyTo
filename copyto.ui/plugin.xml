<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.edit">
         <dynamic
               class="copyto.ui.internal.TargetMenuItems"
               id="copyto.popup">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="copyto.singleItemVisible">
               </reference>
            </visibleWhen>
         </dynamic>
         <menu
               icon="icons/e16/copyto.png"
               id="copyto.menu"
               label="%menu.label">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="copyto.multipleItemsVisible">
               </reference>
            </visibleWhen>
            <dynamic
                  class="copyto.ui.internal.TargetMenuItems"
                  id="copyto.editmenu">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="copyto.isCopyable">
                  </reference>
               </visibleWhen>
            </dynamic>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="%configure.label"
                  style="push">
               <parameter
                     name="preferencePageId"
                     value="copyto.PreferencePage">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:edit?after=copy">
         <dynamic
               class="copyto.ui.internal.TargetMenuItems"
               id="copyto.editmenu">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="copyto.singleItemVisible">
               </reference>
            </visibleWhen>
         </dynamic>
         <menu
               icon="icons/e16/copyto.png"
               id="copyto.menu"
               label="%menu.label">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="copyto.multipleItemsVisible">
               </reference>
            </visibleWhen>
            <dynamic
                  class="copyto.ui.internal.TargetMenuItems"
                  id="copyto.editmenu">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="copyto.isCopyable">
                  </reference>
               </visibleWhen>
            </dynamic>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="%configure.label"
                  style="push">
               <parameter
                     name="preferencePageId"
                     value="copyto.PreferencePage">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution locationURI="toolbar:org.eclipse.ui.workbench.file?before=print">
            <command
                  commandId="copyto.command"
                  disabledIcon="icons/d16/copyto.png"
                  icon="icons/e16/copyto.png"
                  id="copyto.dropdown"
                  label="%menu.label"
                  style="pulldown">
            </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:copyto.dropdown">
         <dynamic
               class="copyto.ui.internal.TargetMenuItems"
               id="copyto.dropdown.items">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="copyto.isCopyable">
               </reference>
            </visibleWhen>
         </dynamic>
         <command
               commandId="org.eclipse.ui.window.preferences"
               label="%configure.label"
               style="push">
            <parameter
                  name="preferencePageId"
                  value="copyto.PreferencePage">
            </parameter>
         </command>         
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="copyto.command"
            name="%menu.label">
         <commandParameter
               id="id"
               name="%commandParameter.id.name"
               optional="true"
               typeId="copyto.TargetParameterType">
         </commandParameter>
      </command>
      <commandParameterType
            converter="copyto.ui.internal.commands.TargetParameterConverter"
            id="copyto.TargetParameterType"
            type="copyto.ui.internal.models.TargetModel">
      </commandParameterType>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="copyto.ui.internal.commands.CopyToHandler"
            commandId="copyto.command">
         <enabledWhen>
            <reference
                  definitionId="copyto.isCopyable">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="copyto.isCopyable">
         <or>
             <with variable="activeMenuSelection"><reference definitionId="copyto.isCopyableSelection"/></with>
             <with variable="selection"><reference definitionId="copyto.isCopyableSelection"/></with>
         </or>         
      </definition>
      <definition
            id="copyto.isCopyableSelection">
            <or>
            <instanceof value="org.eclipse.jface.text.ITextSelection"/>
            <iterate
                  operator="or">
               <or>
                  <adapt
                        type="copyto.core.Copyable">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                  </adapt>
               </or>
            </iterate>
         </or>
      </definition>
      <definition
            id="copyto.one.target">
         <with
               variable="copyto.targets">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="copyto.more.targets">
         <with
               variable="copyto.targets">
            <count
                  value="(1-">
            </count>
         </with>
      </definition>
      <definition
            id="copyto.singleItemVisible">
         <and>
            <reference
                  definitionId="copyto.isCopyable">
            </reference>
            <reference
                  definitionId="copyto.one.target">
            </reference>
         </and>
      </definition>
      <definition
            id="copyto.multipleItemsVisible">
         <and>
            <reference
                  definitionId="copyto.isCopyable">
            </reference>
            <reference
                  definitionId="copyto.more.targets">
            </reference>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="copyto.core.json.MapResponse"
            class="copyto.ui.internal.json.AdapterFactory">
         <adapter
               type="java.net.URL">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.ui.internal.views.markers.MarkerEntry"
            class="copyto.ui.internal.AdapterFactory">
         <adapter
               type="copyto.core.Copyable">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="copyto.ui.internal.preferences.CopyToPreferencePage"
            id="copyto.PreferencePage"
            name="%preferencePage.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="copyto.ui.internal.services.SourceProviderImpl">
         <variable
               name="copyto.targets"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension point="copyto.core.resultHandlers">
      <resultHandler
            class="copyto.ui.internal.ClipboardResultsHandler"
            name="Copy to clipboard">
      </resultHandler>
   </extension>   
</plugin>

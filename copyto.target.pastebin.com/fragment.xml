<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         id="eclipseutils.ui.copyto.pastebin.com"
         point="copyto.core.targets">
      <paramInfos
            hidden="code2,paste">
         <paramInfo
               label="%syntaxHighlight.label"
               name="format"
               type="copyto.target.pastebin.com.internal.FormatValues">
         </paramInfo>
         <paramInfo
               default="{user.name}"
               description="%name.description"
               label="%name.label"
               name="poster">
         </paramInfo>
      </paramInfos>
   </extension>
   <extension
         point="org.eclipse.core.variables.dynamicVariables">
      <variable
            description="%formatVariable.description"
            name="pastebin.com.format"
            resolver="copyto.target.pastebin.com.internal.FormatResolver"
            supportsArgument="true"/>      
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="copyto.target.pastebin.com.internal.PreferenceInitializer">
      </initializer>
   </extension>
</fragment>

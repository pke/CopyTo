<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="targets" name="%Bundle-Name" schema="schema/targets.exsd"/>
   <extension-point id="resultHandlers" name="%Bundle-Name" schema="schema/resultHandlers.exsd"/>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.edit">
         <dynamic
               class="eclipseutils.ui.copyto.internal.ui.TargetMenuItems"
               id="eclipseutils.ui.copyto.popup">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="eclipseutils.ui.copyto.singleItemVisible">
               </reference>
            </visibleWhen>
         </dynamic>
         <menu
               icon="icons/e16/copyto.png"
               id="eclipseutils.ui.copyto.menu"
               label="%menu.label">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="eclipseutils.ui.copyto.multipleItemsVisible">
               </reference>
            </visibleWhen>
            <dynamic
                  class="eclipseutils.ui.copyto.internal.ui.TargetMenuItems"
                  id="eclipseutils.ui.copyto.editmenu">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="eclipseutils.ui.copyto.isCopyable">
                  </reference>
               </visibleWhen>
            </dynamic>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="%configure.label"
                  style="push">
               <parameter
                     name="preferencePageId"
                     value="eclipseutils.ui.copyto.PreferencePage">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:edit?after=copy">
         <dynamic
               class="eclipseutils.ui.copyto.internal.ui.TargetMenuItems"
               id="eclipseutils.ui.copyto.editmenu">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="eclipseutils.ui.copyto.singleItemVisible">
               </reference>
            </visibleWhen>
         </dynamic>
         <menu
               icon="icons/e16/copyto.png"
               id="eclipseutils.ui.copyto.menu"
               label="%menu.label">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="eclipseutils.ui.copyto.multipleItemsVisible">
               </reference>
            </visibleWhen>
            <dynamic
                  class="eclipseutils.ui.copyto.internal.ui.TargetMenuItems"
                  id="eclipseutils.ui.copyto.editmenu">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="eclipseutils.ui.copyto.isCopyable">
                  </reference>
               </visibleWhen>
            </dynamic>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="%configure.label"
                  style="push">
               <parameter
                     name="preferencePageId"
                     value="eclipseutils.ui.copyto.PreferencePage">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution locationURI="toolbar:org.eclipse.ui.workbench.file?before=print">
            <command
                  commandId="eclipseutils.ui.copyto"
                  disabledIcon="icons/d16/copyto.png"
                  icon="icons/e16/copyto.png"
                  id="eclipseutils.ui.copyto.dropdown"
                  label="%menu.label"
                  style="pulldown">
            </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:eclipseutils.ui.copyto.dropdown">
         <dynamic
               class="eclipseutils.ui.copyto.internal.ui.TargetMenuItems"
               id="eclipseutils.ui.copyto.dropdown.items">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="eclipseutils.ui.copyto.isCopyable">
               </reference>
            </visibleWhen>
         </dynamic>
         <command
               commandId="org.eclipse.ui.window.preferences"
               label="%configure.label"
               style="push">
            <parameter
                  name="preferencePageId"
                  value="eclipseutils.ui.copyto.PreferencePage">
            </parameter>
         </command>         
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eclipseutils.ui.copyto"
            name="%menu.label">
         <commandParameter
               id="id"
               name="%commandParameter.id.name"
               optional="true"
               typeId="eclipseutils.ui.copyto.TargetParameterType">
         </commandParameter>
      </command>
      <commandParameterType
            converter="eclipseutils.ui.copyto.internal.commands.TargetParameterConverter"
            id="eclipseutils.ui.copyto.TargetParameterType"
            type="eclipseutils.ui.copyto.internal.models.Target">
      </commandParameterType>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eclipseutils.ui.copyto.internal.commands.CopyToHandler"
            commandId="eclipseutils.ui.copyto">
         <enabledWhen>
            <reference
                  definitionId="eclipseutils.ui.copyto.isCopyable">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="eclipseutils.ui.copyto.isCopyable">
         <or>
             <with variable="activeMenuSelection"><reference definitionId="eclipseutils.ui.copyto.isCopyableSelection"/></with>
             <with variable="selection"><reference definitionId="eclipseutils.ui.copyto.isCopyableSelection"/></with>
         </or>         
      </definition>
      <definition
            id="eclipseutils.ui.copyto.isCopyableSelection">
            <or>
            <instanceof
                  value="org.eclipse.jface.text.ITextSelection">
            </instanceof>
            <iterate
                  operator="or">
               <or>
                  <adapt
                        type="eclipseutils.ui.copyto.api.Copyable">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                  </adapt>
               </or>
            </iterate>
         </or>
      </definition>
      <definition
            id="eclipseutils.ui.copyto.one.target">
         <with
               variable="copyto.targets">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="eclipseutils.ui.copyto.more.targets">
         <with
               variable="copyto.targets">
            <count
                  value="(1-">
            </count>
         </with>
      </definition>
      <definition
            id="eclipseutils.ui.copyto.singleItemVisible">
         <and>
            <reference
                  definitionId="eclipseutils.ui.copyto.isCopyable">
            </reference>
            <reference
                  definitionId="eclipseutils.ui.copyto.one.target">
            </reference>
         </and>
      </definition>
      <definition
            id="eclipseutils.ui.copyto.multipleItemsVisible">
         <and>
            <reference
                  definitionId="eclipseutils.ui.copyto.isCopyable">
            </reference>
            <reference
                  definitionId="eclipseutils.ui.copyto.more.targets">
            </reference>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="eclipseutils.ui.copyto.api.json.MapResponse"
            class="eclipseutils.ui.copyto.internal.json.AdapterFactory">
         <adapter
               type="java.net.URL">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="eclipseutils.ui.copyto.internal.preferences.CopyToPreferencePage"
            id="eclipseutils.ui.copyto.PreferencePage"
            name="%preferencePage.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="eclipseutils.ui.copyto.internal.ui.SourceProviderImpl">
         <variable
               name="copyto.targets"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="eclipseutils.ui.copyto.resultHandlers">
      <resultHandler
            class="eclipseutils.ui.copyto.internal.results.ClipboardResultsHandler"
            name="Copy to clipboard">
      </resultHandler>
   </extension>
</plugin>
